@using ShoppingProject.Areas.Admin.ViewModels
@*@inject OneStopBuy.Areas.Admin.ViewModels.UserClaimsViewModel*@
@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<div class="col-md-10  mx-auto d-block bg-light">
    <br />
    <h2 class="text-center">Edit User</h2>

    <form method="post" class=" mx-auto d-block">
        <div>
            @*<label  asp-for="Id"></label>*@
            <h5>Id</h5>
            <div class="form-group">
                <input class="form-control text-center" asp-for="Id" disabled />
            </div>
        </div>
        <div>
            @* <label asp-for="UserName"></label>*@
            <h5>UserName</h5>
            <div class="form-group">
                <input class="form-control text-center" asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
        </div>
        <div>
            @* <label asp-for="Email"></label>*@
            <h5>Email</h5>
            <div class="form-group">
                <input class="form-control text-center" asp-for="Email" />
                <span asp-validation-for="UserName"></span>
            </div>
        </div>
        <div asp-validation-summary="All"></div>
        <div>
            <div class="form-group">
                <button class="btn btn-primary btn-block mx-auto d-block" type="submit">Update</button>
                <a class="btn btn-danger btn-block mx-auto d-block" asp-action="ListUsers">Cancel</a>
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-header"><h3>User Roles</h3></div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5>@role</h5>
                    }
                }
                else
                {
                    <h5>None at the moment</h5>
                }
            </div>
            @*<div class="card-footer">
            <a asp-controller="Admin" asp-action="ManageUserRoles" asp-route-userId="@Model.Id"
            class="btn btn-primary">
            Manage Roles
            </a>
            </div>*@

        </div>
        <div class="card mt-3">
            <div class="card-header">
                <h3>User Claims</h3>
            </div>
            <div class="card-body">
                @* @if (Model.Claims.Any())
                {
                foreach (var claim in Model.Claims)
                {
                <h5 class="card-title">@claim</h5>
                }
                }
                else
                {
                <h5 class="card-title">None at the moment</h5>
                }*@
            </div>
            <div class="card-footer">
                <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id" style="width:auto;" class="btn btn-primary">Manage Claims</a>
            </div>
        </div>
    </form>
</div>

<style>
    h5, h2 {
        text-align: center;
        color: #a8a8a8;
        text-shadow(1px 1px 0 rgba(white, 1));
    }
</style>