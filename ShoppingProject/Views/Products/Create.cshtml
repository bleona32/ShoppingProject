@model ShoppingProject.Models.Product


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Admin.cshtml";
}


<div class="container">
    <div class="col-md-10 mx-auto py-4 mt-5 mb-5">
        <div class="card">
            <div class="card-header bg-success text-uppercase text-white">

                <h4>Add New Product</h4>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Create">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Brand" class="control-label"></label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Auto_Production_Year" class="control-label"></label>
                                <input asp-for="Auto_Production_Year" class="form-control" />
                                <span asp-validation-for="Auto_Production_Year" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EngineSize" class="control-label"></label>
                                <input asp-for="EngineSize" class="form-control" />
                                <span asp-validation-for="EngineSize" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Engine" class="control-label"></label>
                                <input asp-for="Engine" class="form-control" />
                                <span asp-validation-for="Engine" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Body_Type" class="control-label"></label>
                                <select asp-for="Body_Type" class="form-control">
                                    <option value="">Choose Body Type</option>
                                    <option value="SUV">SUV</option>
                                    <option value="Sedan">Sedan</option>
                                    <option value="Cabrio">Cabrio</option>
                                    <option value="Coupe">Coupe</option>
                                </select>
                                <span asp-validation-for="Body_Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Start_Production" class="control-label"></label>
                                <input asp-for="Start_Production" class="form-control" />
                                <span asp-validation-for="Start_Production" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="End_Production" class="control-label"></label>
                                <input asp-for="End_Production" class="form-control" />
                                <span asp-validation-for="End_Production" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Sets" class="control-label"></label>
                                <input asp-for="Sets" class="form-control" />
                                <span asp-validation-for="Sets" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Doors" class="control-label"></label>
                                <input asp-for="Doors" class="form-control" />
                                <span asp-validation-for="Doors" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Photo" class="control-label"></label>
                                <div class="custom-file">
                                    <input type="file" asp-for="Photo" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Fuel_Consumption" class="control-label"></label>
                                <input asp-for="Fuel_Consumption" class="form-control" />
                                <span asp-validation-for="Fuel_Consumption" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Fuel_Type" class="control-label"></label>
                                <input asp-for="Fuel_Type" class="form-control" />
                                <span asp-validation-for="Fuel_Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Acceleration" class="control-label"></label>
                                <input asp-for="Acceleration" class="form-control" />
                                <span asp-validation-for="Acceleration" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Max_Speed" class="control-label"></label>
                                <input asp-for="Max_Speed" class="form-control" />
                                <span asp-validation-for="Max_Speed" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Power" class="control-label"></label>
                                <input asp-for="Power" class="form-control" />
                                <span asp-validation-for="Power" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Torque" class="control-label"></label>
                                <input asp-for="Torque" class="form-control" />
                                <span asp-validation-for="Torque" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IsDogan" class="control-label"></label>
                                <input asp-for="IsDogan" class="form-control" />
                                <span asp-validation-for="IsDogan" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="submit" class="btn btn-sm btn-success rounded-0 text-uppercase" />
                        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
